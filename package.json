{
  "name": "zhufeng_typescript_development",
  "version": "1.0.0",
  "description": "TypeScript工程化开发",
  "main": "index.js",
  "scripts": {
    "build": "npm run eslint && tsc",
    "eslint": "eslint src --ext .ts",
    "eslint:fix": "eslint src --ext .ts --fix",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "changelogs": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "validate-commit-msg"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://gitee.com/zhufengpeixun/zhufeng_typescript_development"
  },
  "keywords": [
    "typescript",
    "react"
  ],
  "author": "zhangrenyang",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "commitizen": "^4.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.13.0",
    "husky": "^4.3.0",
    "typescript": "^4.0.5",
    "validate-commit-msg": "^2.14.0"
  },
  "dependencies": {},
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
